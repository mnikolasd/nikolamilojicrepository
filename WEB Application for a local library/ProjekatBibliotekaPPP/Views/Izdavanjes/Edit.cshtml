@model ProjekatBibliotekaPPP.Models.Izdavanje

@{
    ViewBag.Title = "Edit";
}
<head>

</head>
<style>
    h2 {
        color: #3A67A5;
    }
    body {
        background-image: url("../../Content/Images/izdavanja_1.jpg");
        background-size: cover;
    }
    #letters {
        color: #3A67A5;
    }
    #left {
        position: absolute;
        left: -18.5%;
    }
</style>
<body>
<h2>Povracaj knjige</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) @Html.HiddenFor(model => model.IzdavanjeId) @Html.HiddenFor(model => model.KnjigaId) @Html.HiddenFor(model => model.DatumIzdavanja) @Html.HiddenFor(model => model.DatumVracanja) @Html.HiddenFor(model => model.ClanID)
        <div class="form-group">
            <div id="letters" class="col-md-10">@string.Format("Da li zelite da vratite knjigu {0} koju je pozajmio {1} na dan - {2}.", Model.Knjiga.Naziv, Model.Clan.Ime, Model.DatumIzdavanja.ToLongDateString())</div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vrati knjigu" class="btn btn-danger" id="left"/>
            </div>
        </div>
    </div>

}
    <br />
    <br />
<div>@Html.ActionLink("Vrati se na listu knjiga", "Index", "Knjigas")</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</body>